############################################
# Single-source env (recommended)
# Edit this root .env. Our script `pnpm env:sync` will auto-generate:
#  - packages/db/.env (for Prisma CLI)
#  - apps/web/.env.local (for Next.js)
# You no longer need to edit those files manually.
############################################

# YNAB OAuth
YNAB_CLIENT_ID=
YNAB_CLIENT_SECRET=
YNAB_REDIRECT_URI=http://localhost:3000/api/auth/ynab/callback

# Alternatively, for Personal Access Token testing (no OAuth):
# Generate in YNAB account settings and paste here.
YNAB_ACCESS_TOKEN=

# App (optional; used for absolute URL generation if needed)
# APP_URL=https://your-domain.example

# Database (SQLite by default). Note: this root value won't be read by Prisma CLI.
# Put the actual value in:
#  - packages/db/.env (for Prisma CLI)
#  - apps/web/.env.local (for Next.js runtime)
DATABASE_URL=file:../packages/db/dev.db
# To use Postgres instead in both places, set:
# DATABASE_URL=postgresql://user:pass@localhost:5432/ynab_counter

# Encryption (must be 32 bytes, base64 encoded)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=
