// Simplified schema for potential server-side caching
// For now, all data lives in browser localStorage
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Optional: Cache YNAB data server-side if needed
model CachedBudget {
  id           String   @id @default(cuid())
  ynabId       String   @unique
  name         String
  data         Json     // Full YNAB response
  lastSyncedAt DateTime @default(now())
}

// Optional: Store computed rewards for sharing/analysis
model ComputedReward {
  id           String   @id @default(cuid())
  period       String   // e.g., "2024-Q1"
  cardName     String
  totalSpend   Int      // in milliunits
  totalRewards Int      // in milliunits or points
  metadata     Json
  computedAt   DateTime @default(now())
}